<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:colorBackground"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/progressSegment0"
        android:layout_width="0dp"
        android:layout_height="5dp"
        app:layout_constraintEnd_toStartOf="@+id/progressSegment1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/progress_segment" />

    <ImageView
        android:id="@+id/progressSegment5"
        android:layout_width="0dp"
        android:layout_height="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/progressSegment4"
        app:layout_constraintEnd_toStartOf="@+id/progressSegment6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/progressSegment4"
        app:layout_constraintTop_toTopOf="@+id/progressSegment4"
        app:srcCompat="@drawable/progress_segment" />

    <ImageView
        android:id="@+id/progressSegment6"
        android:layout_width="0dp"
        android:layout_height="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/progressSegment5"
        app:layout_constraintEnd_toStartOf="@+id/progressSegment7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/progressSegment5"
        app:layout_constraintTop_toTopOf="@+id/progressSegment5"
        app:srcCompat="@drawable/progress_segment" />

    <ImageView
        android:id="@+id/progressSegment7"
        android:layout_width="0dp"
        android:layout_height="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/progressSegment6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/progressSegment6"
        app:layout_constraintTop_toTopOf="@+id/progressSegment6"
        app:srcCompat="@drawable/progress_segment" />

    <ImageView
        android:id="@+id/progressSegment4"
        android:layout_width="0dp"
        android:layout_height="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/progressSegment3"
        app:layout_constraintEnd_toStartOf="@+id/progressSegment5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/progressSegment3"
        app:layout_constraintTop_toTopOf="@+id/progressSegment3"
        app:srcCompat="@drawable/progress_segment" />

    <ImageView
        android:id="@+id/progressSegment3"
        android:layout_width="0dp"
        android:layout_height="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/progressSegment2"
        app:layout_constraintEnd_toStartOf="@+id/progressSegment4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/progressSegment2"
        app:layout_constraintTop_toTopOf="@+id/progressSegment2"
        app:srcCompat="@drawable/progress_segment" />

    <ImageView
        android:id="@+id/progressSegment2"
        android:layout_width="0dp"
        android:layout_height="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/progressSegment1"
        app:layout_constraintEnd_toStartOf="@+id/progressSegment3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/progressSegment1"
        app:layout_constraintTop_toTopOf="@+id/progressSegment1"
        app:srcCompat="@drawable/progress_segment" />

    <ImageView
        android:id="@+id/progressSegment1"
        android:layout_width="0dp"
        android:layout_height="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/progressSegment0"
        app:layout_constraintEnd_toStartOf="@+id/progressSegment2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/progressSegment0"
        app:layout_constraintTop_toTopOf="@+id/progressSegment0"
        app:srcCompat="@drawable/progress_segment" />
</androidx.constraintlayout.widget.ConstraintLayout>