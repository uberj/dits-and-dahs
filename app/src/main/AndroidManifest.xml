<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.uberj.pocketmorsepro">

    <application
        android:allowBackup="true"
        android:icon="@drawable/hare"
        android:label="@string/app_name"
        android:roundIcon="@drawable/hare"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.uberj.pocketmorsepro.MainActivity"></activity>
        <activity android:name="com.example.uberj.pocketmorsepro.TrainingActivityList"
            android:screenOrientation="landscape"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.uberj.pocketmorsepro.training.simple.SimpleStartScreenActivity"
            android:label="Simple Letter Training"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.example.uberj.pocketmorsepro.training.simple.SimpleLetterTrainingActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"></activity>

        <activity
            android:name="com.example.uberj.pocketmorsepro.training.randomletters.RandomLettersStartScreenActivity"
            android:label="Simple Letter Training"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.example.uberj.pocketmorsepro.training.randomletters.RandomLetterKeyboardSessionActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"></activity>
        <activity android:name="com.example.uberj.pocketmorsepro.training.randomletters.RandomLetterSettingsActivity"
            android:screenOrientation="landscape"
            />
    </application>

</manifest>